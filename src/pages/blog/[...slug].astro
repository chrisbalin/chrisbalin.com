---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Base title={`${post.data.title} â€” Chris Balin`} description={post.data.description}>
  <header>
    <a href="/blog" class="text-text-muted hover:text-text text-sm no-underline">&larr; Blog</a>
    <h1 class="text-xl font-semibold mt-4">{post.data.title}</h1>
    <time class="text-sm text-text-muted mt-1 block" datetime={post.data.date.toISOString()}>
      {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
    </time>
  </header>

  <article class="mt-10 prose">
    <Content />
  </article>
</Base>
